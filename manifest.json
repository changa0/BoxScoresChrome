{
    "manifest_version": 2,

    "name": "SlimScore",
    "description": "View live NBA box scores",
    "version": "0.9.1",
    
    "browser_action": {
        "default_icon": "icon.png"
    },

    "background": {
        "scripts": ["event.js"],
        "persistent": false
    },

    "permissions": [
        "https://data.nba.com/",
        "https://data.nba.net/",
        "https://stats.nba.com/"
    ]
}